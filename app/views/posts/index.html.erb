<h1 class="header" >
  <%= link_to '新規追加', new_post_path, class: 'header-menu'%>
  My Posts
</h1>
<ul>
  <% @posts.each do |post| %>
  <li class="padding-top">
    <%= link_to post.title, post_path(post) %>
    <%= link_to '[編集]', edit_post_path(post), class: 'command' %>
    <%= link_to '[削除]',
      post_path(post), 
      method: :delete,
      class: 'command',
      data: { confirm: '削除してもよろしいですか？'} %>
  </li>
  <% end %>
</ul>
